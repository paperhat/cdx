{
  "name": "Codex",
  "scopeName": "source.cdx",
  "patterns": [
    { "include": "#tag" },
    { "include": "#patch" },
    { "include": "#text" }
  ],
  "repository": {
    "tag": {
      "patterns": [
        {
          "name": "meta.tag.cdx",
          "begin": "<\\/?",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.tag.begin.cdx" }
          },
          "end": "\\/?>",
          "endCaptures": {
            "0": { "name": "punctuation.definition.tag.end.cdx" }
          },
          "patterns": [
            { "include": "#tagName" },
            { "include": "#attribute" }
          ]
        }
      ]
    },

    "tagName": {
      "patterns": [
        {
          "name": "support.type.cdx",
          "match": "\\G\\s*([A-Z][A-Za-z0-9]*)"
        }
      ]
    },

    "attribute": {
      "patterns": [
        {
          "name": "meta.attribute.cdx",
          "match": "\\b([a-z][A-Za-z0-9]*)\\b(?=\\=)",
          "captures": {
            "1": { "name": "variable.parameter.cdx" }
          }
        },
        {
          "name": "keyword.operator.assignment.cdx",
          "match": "="
        },
        { "include": "#string" },
        { "include": "#number" },
        { "include": "#boolean" }
      ]
    },

    "string": {
      "patterns": [
        {
          "name": "string.quoted.double.cdx",
          "begin": "\"",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.cdx" }
          },
          "end": "\"",
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.cdx" }
          },
          "patterns": [
            {
              "name": "constant.character.escape.cdx",
              "match": "\\\\[\\\\\"nt]"
            }
          ]
        }
      ]
    },

    "number": {
      "patterns": [
        {
          "name": "constant.numeric.cdx",
          "match": "(?<![A-Za-z0-9])(?:\\d+\\.\\d+|\\d+)(?![A-Za-z0-9])"
        }
      ]
    },

    "boolean": {
      "patterns": [
        {
          "name": "constant.language.boolean.cdx",
          "match": "(?<![A-Za-z0-9])(true|false)(?![A-Za-z0-9])"
        }
      ]
    },

    "patch": {
      "patterns": [
        { "include": "#patchStyleDirective" },
        { "include": "#patchResourceRef" },
        { "include": "#patchSpan" }
      ]
    },

    "patchStyleDirective": {
      "patterns": [
        {
          "name": "meta.embedded.patch.style.cdx",
          "begin": "\\{\\s*(style)\\s*:",
          "beginCaptures": {
            "0": { "name": "punctuation.section.embedded.begin.cdx" },
            "1": { "name": "keyword.cdx" }
          },
          "end": "\\}",
          "endCaptures": {
            "0": { "name": "punctuation.section.embedded.end.cdx" }
          },
          "patterns": [
            {
              "name": "string.special.cdx",
              "match": "\\b[A-Za-z][A-Za-z0-9]*\\b(?=\\s*=)"
            },
            {
              "name": "keyword.operator.assignment.cdx",
              "match": "="
            },
            {
              "name": "string.special.cdx",
              "match": "\\b[A-Za-z0-9][A-Za-z0-9._:-]*\\b"
            }
          ]
        }
      ]
    },

    "patchResourceRef": {
      "patterns": [
        {
          "name": "meta.embedded.patch.resource.cdx",
          "begin": "\\{#",
          "beginCaptures": {
            "0": { "name": "punctuation.section.embedded.begin.cdx" }
          },
          "end": "\\}",
          "endCaptures": {
            "0": { "name": "punctuation.section.embedded.end.cdx" }
          },
          "patterns": [
            {
              "name": "string.special.cdx",
              "match": "[^\\}\\s:]+"
            },
            {
              "name": "punctuation.separator.cdx",
              "match": ":"
            }
          ]
        }
      ]
    },

    "patchSpan": {
      "patterns": [
        {
          "name": "meta.embedded.patch.span.cdx",
          "begin": "\\{\\s*([A-Za-z][A-Za-z0-9]*)\\s*:",
          "beginCaptures": {
            "0": { "name": "punctuation.section.embedded.begin.cdx" },
            "1": { "name": "keyword.cdx" }
          },
          "end": "\\}",
          "endCaptures": {
            "0": { "name": "punctuation.section.embedded.end.cdx" }
          },
          "patterns": [
            { "include": "#patch" },
            {
              "name": "string.special.cdx",
              "match": "[^\\{\\}]+"
            }
          ]
        }
      ]
    },

    "text": {
      "patterns": [
        {
          "name": "string.special.cdx",
          "match": "([^<{]+)"
        }
      ]
    }
  }
}
